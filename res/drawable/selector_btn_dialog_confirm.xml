<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#ff333333" android:startColor="@android:color/black" />

            <corners android:radius="1dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#ff666666" android:startColor="#ff333333" />

            <corners android:radius="1dp" android:color="#ff006400" />
        </shape></item>

</selector>